#!/usr/bin/env ruby

require "date"
require "erb"

title = ARGV.join(" ")
time = Time.now

template = <<~MARKDOWN
  ---
  layout: post
  title: "#{title}"
  date: #{time}
  categories:
  excerpt_separator: <!-- more -->
  ---

MARKDOWN

name = [time.strftime("%Y-%m-%d"), ARGV.map(&:downcase)].join('-')
path = File.join("src", "_posts", "#{name}.md")

File.open(path, File::WRONLY | File::CREAT | File::EXCL) do |file|
  file.write(ERB.new(template).result)
end
